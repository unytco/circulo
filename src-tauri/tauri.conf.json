{
  "version": "0.20.0",
  "productName": "Domino",
  "identifier": "co.unyt.domino.sandbox",
  "build": {
    "beforeBuildCommand": "cd ./domino && APP_VERSION=$$(jq -r '.version' ../src-tauri/tauri.conf.json) make ci-build-ui",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../domino/ui/lit-2/dist"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "macOS": {
      "entitlements": "entitlements.plist"
    }
  }
}
