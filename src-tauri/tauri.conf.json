{
  "version": "0.31.2",
  "productName": "Unyt",
  "identifier": "co.unyt.unyt.sandbox",
  "build": {
    "beforeBuildCommand": "cd ./unyt && make ci-build-ui",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../unyt/ui/lit-2/dist"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "capabilities": ["mobile-capability", "main-capability", "desktop-capability"]
    }
