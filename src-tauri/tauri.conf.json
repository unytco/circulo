  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "macOS": {
      "entitlements": "entitlements.plist"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU0NUIwQjY4QjQ1RkNFNTUKUldSVnpsKzBhQXRiVkpERWlmckcva2ZORzVlSDFTQ3NCS3dDRmhJbW44NkJuRVBVUUN3akZSUmEK",
      "endpoints": ["https://github.com/unytco/shinyyard-unyt/releases/latest/download/latest.json"]
    },
    "deep-link": {
      "mobile": [{ "scheme": ["unyt"] }],
      "desktop": {
        "schemes": ["unyt"]
      }
    }
  }
}
